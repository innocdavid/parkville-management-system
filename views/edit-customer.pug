doctype html
head
  meta(charset='UTF-8')
  meta(http-equiv='X-UA-Compatible' content='IE=edge')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')

  title #{title}

-const container = {'width': '100%', 'height': '97vh','display': 'flex', 'align-items': 'center', 'justify-content': 'center', 'flex-direction': 'column', 'margin': '0', 'background-color': 'rgb(250, 246, 246)'}
-const titleStyle = {'font-size': '1.6rem', 'position': 'relative', 'font-weight': '600px'}
-const content = {'background-color': '#fff', 'display': 'flex', 'flex-direction': 'column', 'justify-content': 'space-between', 'flex-wrap': 'wrap', 'align-items': 'center', 'margin': '1rem 0 .8rem 0', 'padding': '1rem', 'width': '37%', 'border-radius': '1rem', 'box-shadow': '0 5px 10px rgba(0, 0, 0, 0.15)'}
-const card = {'margin-bottom': '.4rem', 'width': 'calc(100%/2 - 15px)', 'display': 'flex', 'flex-direction': 'column'}
-const details = {'display': 'block', 'font-weight': '500', 'margin-bottom': '5px'}
-const user = {'display': 'flex', 'flex-wrap': 'wrap', 'justify-content': 'space-between', 'margin': '.6rem 0 .5rem 0'}
-const box = {'height': '25px', 'width': '100%', 'outline': 'none', 'font-size': '16px', 'border-radius': '5px', 'border': '1px solid #71b7c6', 'padding-left': '12px'}
.container(style=container)

  .title(style=titleStyle) Edit Customer Details Form

  .content(style=content)
    // ITEM REGISTRATION FORM
    form(method='POST', action='/update-customer/'+docs._id)
      // first Name
      .user-details(style=user)
        .input-box(style=card)
          span(style=details) First Name
          input(type='text', placeholder='Enter First Name', name='firstname', style=box, value=docs.firstname)
        // last name
        .input-box(style=card)
          span(style=details) Last Name
          input(type='text', placeholder='Enter Last Name', name='lastname', style=box, value=docs.lastname)
      // user email
      .user-details(style=user)
        .input-box(style=card)
          span(style=details) Email
          input(type='email', placeholder='Enter Email', name='email', style=box, value=docs.email)
        // user phone number
        .input-box(style=card)
          span(style=details) Phone Number
          input(type='telephone', placeholder='Enter Telephone', name='telephone', style=box, value=docs.telephone)
      // Numbar Plate
      .user-details(style=user)
        .input-box(style=card)
          span(style=details) Plate Number
          input(type='text', placeholder='Enter Plate Number', name='platenumber', style=box, value=docs.platenumber)
        // Car Model
        .input-box(style=card)
          span(style=details) Car Model
          input(type='text', placeholder='Enter Car Model', name='carmodel', style=box, value=docs.carmodel)
        // Car Color
      .user-details(style=user)
        .input-box(style=card)
          span(style=details) Car Color
          input(type='text', placeholder='Enter Car Color', name='carcolor', style=box, value=docs.carcolor)
        .input-box(style=card)
          span(style=details) Arrival Time
          input(type='text', name='datetime', style=box, value=docs.datetime)
      .user-details(style=user)
        .input-box(style=card)
          span(style=details) Parking Duration
          input(name='duration', style=box, value=docs.duration)
            
        .input-box(style=card)
          span(style=details) Parking Cost
          input(name='cost', style=box, value=docs.cost)
      .user-details(style=user) 
        .input-box(style=card) 
          span(style=details) Checkout Status
          select(name='parkingstatus', style=box) 
            option(value='Pending') Pending 
            option(value='Cleared') Cleared
        .input-box(style=card)
          span(style=details) Checkout Time
          input(type='datetime-local', style=box, name='checkouttime', value=docs.checkouttime)
      .user-details(style=user)
        .input-box(style=card)
          .buttons
            input(type='submit', style=box, value='Save Changes')
        .input-box(style=card)
          a.buttons(href='/vehicle')
            input(type='button', style=box, value='Return')